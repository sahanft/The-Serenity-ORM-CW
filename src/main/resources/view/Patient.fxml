<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.therapycenter.controller.PatientController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>

                <!-- Patient Form -->
                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="15.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefWidth="80.0" text="ID" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblPatientId" text="ID" textFill="#2c3e50">
                                            <font>
                                                <Font size="12.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefWidth="80.0" text="Contact:" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtContact" prefHeight="30.0" prefWidth="220.0" promptText="Enter contact number" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefWidth="80.0" text="Gender:" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="cmbGender" prefHeight="30.0" prefWidth="220.0" promptText="Select gender" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox spacing="15.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefWidth="80.0" text="Name:" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtName" prefHeight="30.0" prefWidth="220.0" promptText="Enter patient name" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label prefWidth="80.0" text="Reg. Date" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                              <Label fx:id="dpRegDate" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                  <Label fx:id="errorMessage" prefHeight="17.0" prefWidth="112.0" />
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addPatient" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #40ff00; -fx-text-fill: white;" text="Add">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updatePatient" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #40ff00; -fx-text-fill: white;" text="Update">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deletePatient" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #40ff00; -fx-text-fill: white;" text="Delete">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnReset" mnemonicParsing="false" onAction="#resetForm" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: white; -fx-text-fill: white;" text="Reset" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>

                <!-- Patient Records Header -->
                <Label text="Patient Records:" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <!-- Patient Records Table -->
                <TableView fx:id="tblPatients" onMouseClicked="#petientSelectOnAction" prefHeight="290.0" prefWidth="740.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="colContact" prefWidth="150.0" text="Contact" />
                        <TableColumn fx:id="colGender" prefWidth="100.0" text="Gender" />
                        <TableColumn fx:id="colRegDate" prefWidth="150.0" text="Reg. Date" />
                    </columns>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
